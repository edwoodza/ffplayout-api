[Unit]
Description=ffplayout api daemon
After=network.target

[Service]
WorkingDirectory=/var/www/ffplayout-api/ffplayout
Environment=DJANGO_SETTINGS_MODULE=ffplayout.settings.production
ExecStart=/var/www/ffplayout-api/venv/bin/gunicorn --workers 4 --worker-class=gevent --timeout 10800 --log-level=info --log-file=- --access-logfile=- --bind 127.0.0.1:8001 ffplayout.wsgi:application
KillMode=process
User=root
Group=root

[Install]
WantedBy=multi-user.target
